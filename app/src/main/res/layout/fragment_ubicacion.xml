<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Ilustración -->
    <ImageView
        android:id="@+id/ivIlustracionUbicacion"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ilustracion_ubicacion"
        android:contentDescription="Mapa o ubicación"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Mensaje -->
    <TextView
        android:id="@+id/tvMensajeUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puedes compartir tu ubicación con tu cuidador"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivIlustracionUbicacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón enviar ubicación -->
    <Button
        android:id="@+id/btnEnviarUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar ubicación"
        android:backgroundTint="@color/verde_claro"
        android:textColor="@android:color/white"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvMensajeUbicacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
