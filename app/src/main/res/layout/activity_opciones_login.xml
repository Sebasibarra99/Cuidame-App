<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_claro"
    android:padding="24dp"
    tools:context=".OpcionesLoginActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_logo_cuidame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Logo"/>

    <TextView
        android:id="@+id/tvTituloApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cuídame"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ivLogo"
        android:layout_marginStart="8dp" />
    <!-- Mensaje superior -->

    <!-- Imagen central (anciano o ilustración) -->
    <TextView
        android:id="@+id/tvMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Tu bienestar, siempre contigo"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón Iniciar sesión -->

    <!-- Botón Registrarse -->

    <ImageView
        android:id="@+id/ivIlustracion"
        android:layout_width="220dp"
        android:layout_height="400dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/anciano"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMensaje" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/opcionEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/white"
        android:text="INICIAR SESION"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:textSize="16sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivIlustracion" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/opcionGoogle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:text="REGISTRARSE"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:textSize="16sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/opcionEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>
